{
  "metadata": [
    {
      "src": [
        {
          "src": "..",
          "files": [
            "Runtime/**/*.cs",
            "Editor/**/*.cs"
          ],
          "exclude": [
            "**/Libraries/**",
            "**/Plugins/**"
          ]
        }
      ],
      "filter": "filter.yml",
      "dest": "api"
    }
  ],
  "build": {
    "globalMetadata": {
      "_appTitle": "Algorand SDK for Unity",
      "_appFooter": "Generated by DocFX",
      "_appLogoPath": "resources/logo.svg",
      "_appFaviconPath": "resources/favicon.ico",
      "_enableSearch": true,
      "_enableNewTab": true,
      "_gitContribute": {
        "repo": "https://github.com/CareBoo/unity-algorand-sdk",
        "branch": "main"
      }
    },
    "content": [
      {
        "files": [
          "toc.yml",
          "index.md",
          "../README.md"
        ]
      },
      {
        "src": "manual",
        "files": [
          "toc.yml"
        ],
        "dest": "manual"
      },
      {
        "src": "changelog",
        "files": [
          "toc.yml"
        ],
        "dest": "changelog"
      },
      {
        "src": "..",
        "files": [
          "CHANGELOG.md"
        ],
        "dest": "changelog"
      },
      {
        "src": "license",
        "files": [
          "toc.yml"
        ],
        "dest": "license"
      },
      {
        "src": "..",
        "files": [
          "LICENSE.md",
          "Third Party Notices.md"
        ],
        "dest": "license"
      },
      {
        "src": "api",
        "files": [
          "*.yml"
        ],
        "dest": "api"
      },
      {
        "src": "../docs",
        "files": [
          "**/*.md"
        ],
        "exclude": [
          "TableOfContents.md"
        ],
        "dest": "manual"
      }
    ],
    "dest": "../_site",
    "overwrite": [
      {
        "src": "..",
        "files": [
          "*/Algorand.Unity*/**/*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "resources/**/*"
        ]
      },
      {
        "src": "../docs",
        "files": [
          "images/**/*"
        ],
        "dest": "docs"
      }
    ],
    "sitemap": {
      "baseUrl": "https://careboo.github.io/unity-algorand-sdk/5.0",
      "changefreq": "monthly",
      "fileOptions": {
        "api/*": {
          "changefreq": "weekly"
        }
      }
    },
    "template": [
      "default",
      "templates/darkfx"
    ],
    "xref": [
      "https://normanderwan.github.io/UnityXrefMaps/xrefmap.yml"
    ]
  }
}
