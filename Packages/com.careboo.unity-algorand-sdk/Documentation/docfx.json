{
    "metadata": [
        {
            "src": [
                {
                    "src": "..",
                    "files": [
                        "**/*.cs"
                    ],
                    "exclude": [
                        "Plugins/**"
                    ]
                }
            ],
            "filter": "filterConfig.yml",
            "dest": "api"
        }
    ],
    "build": {
        "globalMetadata": {
            "_appTitle": "Unity Algorand SDK",
            "_appFooter": "Generated by DocFX",
            "_appLogoPath": "resources/logo.svg",
            "_appFaviconPath": "resources/favicon.ico",
            "_enableSearch": true,
            "_enableNewTab": true,
            "_gitContribute": {
                "repo": "https://github.com/CareBoo/unity-algorand-sdk",
                "branch": "exp"
            }
        },
        "content": [
            {
                "files": [
                    "toc.yml",
                    "index.md"
                ]
            },
            {
                "src": "api",
                "files": [
                    "*.yml"
                ],
                "dest": "api"
            },
            {
                "src": "manual",
                "files": [
                    "toc.yml",
                    "*.md"
                ],
                "dest": "manual"
            }
        ],
        "dest": "../_site",
        "overwrite": [
            {
                "src": "..",
                "files": [
                    "CareBoo.AlgoSdk*/**/*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "resources/**/**"
                ]
            }
        ],
        "sitemap": {
            "baseUrl": "https://CareBoo.github.io/unity-algorand-sdk",
            "changefreq": "weekly",
            "fileOptions": {
                "api/*": {
                    "changefreq": "daily"
                }
            }
        },
        "template": [
            "default",
            "templates/unity"
        ]
    }
}
