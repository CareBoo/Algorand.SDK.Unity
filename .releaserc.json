{
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular"
      }
    ],
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "preset": "angular",
        "changelogFile": "Packages/com.careboo.algorand-sdk-unity/CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false,
        "pkgRoot": "Packages/com.careboo.algorand-sdk-unity"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "Packages/com.careboo.algorand-sdk-unity/package.json",
          "Packages/com.careboo.algorand-sdk-unity/CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ],
  "branches": [
    "+([0-9])?(.{+([0-9]),x}).x",
    "master",
    {
      "name": "pre",
      "prerelease": true
    },
    {
      "name": "exp",
      "prerelease": true
    }
  ]
}
